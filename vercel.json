{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    }
  ],
  "env": {
    "CLIENT_ID": "client_id",
    "CLIENT_SECRET": "client_secret",
    "BOT_TOKEN": "bot_token",
    "REDIRECT_URI": "redirect_uri",
    "GUILD_ID": "guild_id",
    "CHANNEL_ID": "channel_id",
    "ROLE_ID": "role_id"
  }
}
